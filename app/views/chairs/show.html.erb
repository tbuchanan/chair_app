

<h2><!-- Furniture details --></h2>
	<div class="container">
		Type: <%= @chair.name%></br>
		Description: <%= @chair.description%></br>
		Address: <%= @chair.address%></br>
	<h1></h1>
			<%= link_to "Edit", edit_chair_path, :class => 'btn btn-default' %>
	</div></br>

	<div class="row-fluid">
		<div class="col-md-5">
			<%= image_tag @chair.image(:medium) %>
		</div>
		<div class="col-md-7" id="google">
			<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&markers=#{@chair.address}&zoom=16", id: "chairMap" %>
			<button id="zoomOut"> - </button><button id="zoomIn"> + </button>
		</div>
			
		<script>
			$("#google").on("click", "#zoomIn, #zoomOut", function(event){
				var $img = $("#chairMap");
				var src = $("#chairMap").attr("src");
				var src_arr = src.split("&zoom=");
				var zoom = (Number(src_arr[1]));

				console.log(event.target.id)
				if (event.target.id === "zoomIn"){
					if (zoom < 20){ 
						zoom += 1;					
					}
				} else {
						if (zoom > 0){ 
							zoom -= 1;
						}
					}
				src = src_arr[0] + "&zoom="+ zoom;
				$img.attr("src",src);
			});
		</script>
	</div>
</div>
<br></br>
		